<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Macchiato">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/back"
        android:scaleType="fitXY"
        android:alpha="0.1"
        android:id="@+id/background"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrowback"
            android:id="@+id/imbackarrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Macchiato"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="31dp"
            android:layout_marginHorizontal="100dp"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/macchiato"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/background"
        android:layout_marginTop="30dp"
        android:padding="12dp"
        android:id="@+id/macline"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Macchiato"
            android:textSize="25dp"
            android:textStyle="bold"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/minus"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/minus"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="23dp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:id="@+id/count"
            android:gravity="center_vertical"
            />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/add"
            android:layout_gravity="center_vertical"
            android:id="@+id/add"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/macline"
        android:padding="12dp"
        android:id="@+id/rupee"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/rupee"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="295"
            android:textStyle="bold"
            android:textColor="#b78877"
            android:textSize="32dp"
            android:id="@+id/rs"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_below="@+id/rupee"
        android:text="Size"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/txt"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_below="@+id/txt"
        android:padding="12dp"
        android:id="@+id/img"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/macchiato"
            android:layout_gravity="center_vertical"
            android:alpha="0.3"
            android:id="@+id/smallcup"
            android:clickable="true"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/macchiato"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:id="@+id/medcup"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/macchiato"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:alpha="0.3"
            android:id="@+id/largecup"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/img"
        android:padding="12dp"
        android:id="@+id/sutxt"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sugar"
            android:textSize="22dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(in Cubes)"
            android:textSize="22dp"
            android:textColor="#ababab"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/sutxt"
        android:padding="12dp"
        android:id="@+id/cubes">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/sone"
            android:alpha="0.3"
            android:id="@+id/onecube"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:src="@drawable/stwo"
            android:layout_marginLeft="10dp"
            android:id="@+id/twocube"
            />
        <ImageView
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:src="@drawable/sthree"
            android:layout_marginLeft="5dp"
            android:alpha="0.3"
            android:id="@+id/threecube"/>
    </LinearLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/cubes"
        android:text="Order"
        android:textSize="18dp"
        android:textStyle="bold"
        android:backgroundTint="#b78877"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>

</RelativeLayout>